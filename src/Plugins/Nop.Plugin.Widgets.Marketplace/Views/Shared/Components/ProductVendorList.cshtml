@model Nop.Plugin.Widgets.Marketplace.Models.ProductVendorListViewModel
@{
    //NopHtml.AppendCssFileParts("~/Plugins/Nop.Plugin.Widgets.Marketplace/assets/content/css/common.css");
}
@*<link rel="stylesheet" href="~/Plugins/Nop.Plugin.Widgets.Marketplace/assets/content/css/common.css" />*@

@if (Model.IsEnabled)
{
    <style type="text/css">
        .product-vendors {
            display: flex;
            padding: 5px;
            flex-wrap: wrap;
            margin-bottom: 20px;
            border-bottom:1px solid;
        }

            .product-vendors .vendor {
                flex: 0 0 40%;
                max-width: 40%;
                width: 100%;
            }

                .product-vendors .vendor .vendor-name {
                    font-weight: bold;
                    color: royalblue;
                    font-size: 17px;
                }

            .product-vendors .price {
                flex: 0 0 30%;
                max-width: 30%;
                width: 100%;
            }

                .product-vendors .price .old-price {
                    font-weight: 400;
                    color: #9e9e9e;
                    text-decoration: line-through;
                    padding-left: 10px;
                    height: 16px;
                    line-height: 16px;
                    text-align: left;
                }

                .product-vendors .price .current-price {
                    font-size: 18px;
                    color: #484848;
                    font-weight: 700;
                }

            .product-vendors .add-to-cart {
                flex: 0 0 30%;
                max-width: 30%;
                width: 100%;
            }

                .product-vendors .add-to-cart .btn-add-to-cart {
                    transition-property: background-color,border-color;
                    background-color: #4ab2f1;
                    white-space: nowrap;
                    color: #fff;
                    border: 0;
                    border-radius: 5px;
                    padding: 10px 16px;
                    outline: 0;
                    cursor: pointer;
                    line-height: 1;
                    display: inline-block;
                }
    </style>

    <h3 class="title" style="margin-bottom:15px;">Tüm Satıcılar (@Model.ProductVendorBriefInfoList.Count)</h3>

    <div class="product-vendors">
        <div class="vendor">
            <strong style="font-size:20px;">Satıcı</strong>
        </div>
        <div class="price">
            <strong style="font-size:20px;">Fiyat</strong>
        </div>
        <div class="add-to-cart">
            &nbsp;
        </div>
    </div>
    @foreach (var item in Model.ProductVendorBriefInfoList)
    {
        <div class="product-vendors">
            <div class="vendor">
                <span class="vendor-name"><a target="_blank" href="@item.VendorURL">@item.VendorName</a></span>
            </div>
            <div class="price">
                <span class="old-price">@item.OldPrice.ToString("0.00 TL")</span>
                <br>
                <span class="current-price">@item.Price.ToString("0.00 TL")</span>
            </div>
            <div class="add-to-cart">
                <a data-id="@item.ProductVendorMappingId" class="btn-add-to-cart">Sepete Ekle</a>
            </div>
        </div>
    }
}